<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#443f3c" >

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="hgjhjgjggjhvkgvhjgvghjvghgkhgkggvghgkkkgvjkhvghvkkhghvgkvggvkvgk"
        android:textColor="#ADACAC"
        android:gravity="center"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    
    <RelativeLayout
            android:id="@+id/adsdasdas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
         >
         
            <EditText
            android:id="@+id/veri_ed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="23dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:hint="Verification Code"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:ellipsize="end" >

            <requestFocus />
        </EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/verify" />

    </RelativeLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:weightSum="10" >
            <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textColor="#ADACAC"
        android:text="Resend"
        android:onClick="resend_fun" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="#ADACAC"
        android:layout_weight="5"
        android:onClick="done_fun" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adsdasdas"
        android:scaleType="fitXY"
        android:src="@drawable/edittext_bg" />

</RelativeLayout>
